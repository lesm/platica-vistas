<!DOCTYPE html>
<html>
<head>
  <title>Vistas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if flash.notice.present? %>
      <div class="alert alert-success">
        <%= flash.notice %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
